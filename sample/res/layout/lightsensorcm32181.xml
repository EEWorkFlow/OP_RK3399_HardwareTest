<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lightsensorcm32181"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="60px"
        android:layout_weight="1"
        android:text="@string/lightsensorcm32181_light_desc"
        android:textAppearance="?android:attr/textAppearance"/>

    <TextView
        android:id="@+id/lightsensorcm32181_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/lightsensorcm32181_failed"
        android:textSize="60px"
        android:gravity="center" />

    <TextView
        android:id="@+id/lightsensorcm32181_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/lightsensorcm32181_note"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/lightsensorcm32181_iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/lightsensorcm32181"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />


</LinearLayout>